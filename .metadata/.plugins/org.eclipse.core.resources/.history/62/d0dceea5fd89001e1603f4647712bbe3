package fundamentos;
import java.util.Scanner;

public class Exercicio010 {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		System.out.println("Digite um número: ");
		
		double numero1 = entrada.nextDouble();
		double numero2 = entrada.nextDouble();
		double numero3 = entrada.nextDouble();
		
		double maior = numero1; // assume que o primeiro número é o maior
		double menor = numero1; // assume que o primeiro número é o menor
		
		if (numero2 > maior) { // se o segundo número for maior que o maior atual
			maior = numero2; // atualiza o maior
		}
		if (numero3 > maior) { // se o terceiro número for maior que o maior atual
			maior = numero3; // atualiza o maior
		}
		if (numero2 < menor) { // se o segundo número for menor que o menor atual
			menor = numero2; // atualiza o menor
		}
		if (numero3 < menor) { // se o terceiro número for menor que o menor atual
			menor = numero3; // atualiza o menor
		}
		
		System.out.println("O número " + maior + " é o maior, e " + menor + " é o menor.");
	}
}