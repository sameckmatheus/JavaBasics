
import java.util.Arrays;

public class JogoDaForca2 {
  public static void main(final String[] args) {
    final char[] palavra = sorteiaPalavra();
    final char[] tabuleiro = montaTabuleiro(palavra);
    int erros = 0;

    while (erros < 7 && !Arrays.equals(tabuleiro, palavra)) {
      mostraTabuleiro(tabuleiro);
      System.out.println();

      System.out.print("Informe uma letra: ");
      final char letra = System.console().readLine().charAt(0);

      if (acertou(palavra, letra)) {
        atualizaTabuleiro(tabuleiro, palavra, letra);
      } else {
        erros++;
      }
    }

    if (erros >= 7) {
      System.out.println("Você perdeu : " + new String(palavra));
    } else {
      System.out.println("Você venceu : " + new String(palavra));
    }
  }


  private static char[] sorteiaPalavra() {
    return "exemplo".toCharArray();
  }

  private static char[] montaTabuleiro(final char[] palavra) {
    final char[] tabuleiro = new char[palavra.length];
    Arrays.fill(tabuleiro, '_');
    return tabuleiro;
  }

  private static void mostraTabuleiro(final char[] tabuleiro) {
    System.out.println(Arrays.toString(tabuleiro));
  }

  private static boolean acertou(final char[] palavra, final char letra) {
    for (final char c : palavra) {
      if (c == letra) {
        return true;
      }
    }
    return false;
  }

  private static void atualizaTabuleiro(final char[] tabuleiro, final char[] palavra, final char letra) {
    for (int i = 0; i < palavra.length; i++) {
      if (palavra[i] == letra) {
        tabuleiro[i] = letra;
      }
    }
  }
}
